{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2016"],
    "paths": {
      "*": ["*"]
    },
    "allowJs": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist"
  },
  "typeRoots": ["./@types", "./node_modules/@types"],
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "src/__tests__/**/*.ts"]
}
